<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/menu_background"
    tools:context=".Main">

    <TextView
        android:layout_marginTop="0dp"
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:text="MENU"
        android:id="@+id/menu"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:textSize="32sp"/>
    <Button
        android:layout_marginTop="50dp"
        android:layout_width="189dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:id="@+id/testButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/knopka_test"/>
    <Button
        android:layout_marginTop="112dp"
        android:layout_width="189dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:id="@+id/reitingButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/knopka_reiting"/>
    <Button
        android:layout_marginTop="174dp"
        android:layout_width="189dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:id="@+id/knopka_pro_nasButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/knopka_pro_nas"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="\u00A9 2013"
        android:textColor="#ffffff"
        android:id="@+id/textView"
        android:layout_below="@+id/testButton"
        android:layout_marginTop="150dp"
        android:gravity="center_horizontal"
        android:textSize="12dp"/>
</RelativeLayout>
